{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "lib": ["ES2020"],          // ← must NOT include "dom"
      "types": ["node"],          // ← ensures Node core types
      "strict": true,
      "skipLibCheck": true,
      "rootDir": "./src",
      "outDir": "./dist"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": ["node_modules", "dist"]
  }
  